{% render 'gdc-logo-list-text' %}

{% schema %}
  {
    "name": "GDC: Logo list Text",    
    "settings": [
      {
        "type": "header",
        "content": "Section Settings" 
      },
      {
        "type": "range",
        "id": "t_margin",
        "label": "Section Top margin",
        "default": 0,
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px" 
      },
      {
        "type": "range",
        "id": "b_margin",
        "label": "Section Bottom margin",
        "default": 0,
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "t_padding",
        "label": "Section Top padding",
        "default": 20,
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px" 
      },
      {
        "type": "range",
        "id": "b_padding",
        "label": "Section Bottom padding",
        "default": 20,
        "min": 0,
        "max": 200,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#ededed"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      },
      {
        "type": "checkbox",
        "id": "enable_parallax",
        "default": false,
        "label": "Enable Parallax"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Subtitle"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>"
      },
      {
        "type": "select",
        "id": "text_align",
        "options": [
           { "value": "left", "label": "Left"},
           { "value": "center", "label": "Center"},  
           { "value": "right", "label": "Right"}
        ],
        "label": "Section Text alignment"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text",
        "default": "Button"
      },
      {
        "type": "url",
        "id": "btn_url",
        "label": "Button Link"
      },
      {
        "type": "color",
        "id": "btn_color",
        "label": "Button Color",
        "default": "#ededed"
      },
      {
        "type": "color",
        "id": "btn_text_color",
        "label": "Button Text Color",
        "default": "#333"
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Logo Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "GDC: Logo list Text",
        "category": "GDC Custom Components",
        "blocks": []
      }
    ]
  }
{% endschema %}