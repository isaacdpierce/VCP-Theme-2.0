{% render 'gdc-logo-list' %}

{% schema %}
  {
    "name": "GDC: Logo list",
    "class": "index-section",   
    "settings": [
      {
        "type": "checkbox",
        "id": "hide_mobile",
        "label": "Hide on mobile",
        "default": false
      },
      {
        "type": "select",
        "id": "color_scheme",
        "options": [
          {
            "value": "accent-1",
            "label": "t:sections.footer.settings.color_scheme.options__1.label"
          },
          {
            "value": "accent-2",
            "label": "t:sections.footer.settings.color_scheme.options__2.label"
          },
          {
            "value": "background-1",
            "label": "t:sections.footer.settings.color_scheme.options__3.label"
          },
          {
            "value": "background-2",
            "label": "t:sections.footer.settings.color_scheme.options__4.label"
          },
          {
            "value": "inverse",
            "label": "t:sections.footer.settings.color_scheme.options__5.label"
          }
        ],
        "default": "background-1",
        "label": "t:sections.footer.settings.color_scheme.label"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Section Title"
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "logo_title",
            "label": "Logo Title"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "GDC: Logo list",
        "category": "GDC Custom Components",
        "blocks": [
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
{% endschema %}
