{% render 'gdc-hero-image-text' %}

{% schema %}
{
  "name": "GDC: Hero Image & Text",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "range",
      "id": "hero_height",
      "label": "Section Height",
      "default": 500,
      "min": 250,
      "max": 750,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "hero_width",
      "label": "Section Width",
      "default": 100,
      "min": 50,
      "max": 100,
      "step": 1,
      "unit": "%"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#fefefe"
    },
    {
      "type": "range",
      "id": "t_margin",
      "label": "Section Top Margin",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px" 
    },
    {
      "type": "range",
      "id": "b_margin",
      "label": "Section Bottom Margin",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "v_padding",
      "label": "Section Vertical Padding",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px" 
    },
    {
      "type": "range",
      "id": "h_padding",
      "label": "Section Horizontal Padding",
      "default": 0,
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px" 
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Rounded Corners",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "img_h_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Image Horizontal Position",
      "default": 50
    },
    {
      "type": "range",
      "id": "img_v_position",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Image Vertical Position",
      "default": 50
    },
    {
      "type": "header",
      "content": "Image Color Settings"
    },
    {
      "type": "range",
      "id": "opacity",
      "label": "Opacity",
      "default": 100,
      "min": 0,
      "max": 100,
      "unit": "%",
      "step": 1
    },
    {
      "type": "range",
      "id": "blur",
      "label": "Blur",
      "default": 0,
      "min": 0,
      "max": 100,
      "unit": "%",
      "step": 1
    }, 
    {
      "type": "range",
      "id": "brightness",
      "label": "Brightness",
      "default": 100,
      "min": 10,
      "max": 200,
      "unit": "%",
      "step": 2
    },
    {
      "type": "range",
      "id": "contrast",
      "label": "Contrast",
      "default": 100,
      "min": 10,
      "max": 200,
      "unit": "%",
      "step": 2
    },
    {
      "type": "range",
      "id": "grey_scale",
      "label": "Gey Scale",
      "default": 0,
      "min": 0,
      "max": 100,
      "unit": "%",
      "step": 1
    },
    {
      "type": "range",
      "id": "hue_rotate",
      "label": "Hue Rotate",
      "default": 0,
      "min": 0,
      "max": 360,
      "unit": "%",
      "step": 5
    },
    {
      "type": "range",
      "id": "sepia",
      "label": "Sepia",
      "default": 0,
      "min": 0,
      "max": 100,
      "unit": "%",
      "step": 1
    },
    {
      "type": "range",
      "id": "saturate",
      "label": "Saturate",
      "default": 100,
      "min": 0,
      "max": 200,
      "unit": "%",  
      "step": 2
    },
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "range",
      "id": "text_max_width",
      "min": 100,
      "max": 900,
      "step": 10,
      "unit": "px",
      "label": "Text Section Max Width",
      "default": 800
    },
    {
      "type": "select",
      "id": "text_h_pos",
      "default": "center",
      "options": [
         { "value": "start", "label": "Left"},
         { "value": "center", "label": "Center"},
         { "value": "flex-end", "label": "Right"}
      ],
      "label": "Text Horizontal Position"    
    },
    {
      "type": "select",
      "id": "text_v_pos",
      "default": "center",
      "options": [
         { "value": "start", "label": "Top"},
         { "value": "center", "label": "Center"},
         { "value": "flex-end", "label": "Bottom"}
      ],
      "label": "Text Vertical Position" 
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_bg_color",
      "label": "Text Background color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "bg_opacity",
      "label": "Text Background Opacity",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "text_align",
      "options": [
         { "value": "left", "label": "Left"},
         { "value": "center", "label": "Center"},
         { "value": "right", "label": "Right"}
      ],
      "label": "Text Alignment" 
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 16,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Title Font Size",
      "default": 48
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle"
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "min": 16,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Subtitle Font Size",
      "default": 24
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Section Rich Text"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 10,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Rich Text Font Size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text", 
      "id": "btn_text",
      "label": "Button Text",
      "info": "Button only shows if text is entered."  
    },
    {
      "type": "url", 
      "id": "btn_url",
      "label": "Button url" 
    },
    {
      "type": "color",
      "id": "btn_color",
      "label": "Button Color"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color"
    }
  ],
  "presets": [
    {
      "name": "GDC: Hero Image & Text",
      "category": "GDC Custom Components"
    }
  ]
}
{% endschema %}