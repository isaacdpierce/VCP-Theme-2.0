{% if section.settings.enable_section %}
  {% render 'gdc-grid-image-text-mobile' %}
  {% render 'gdc-grid-image-text-desktop' %}
{% endif %}

{% schema %}
  {
    "name": "GDC: Grid Image & Text",
    "settings": [
      {
        "type": "header",
        "content": "Section Settings"
      },
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable Grid Section",
        "default": true
      },
      {
        "type": "range",
        "id": "section_width",
        "min": 60,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Section Width",
        "default": 100
      },
      {
        "type": "range",
        "id": "t_margin",
        "label": "Section top margin",
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "b_margin",
        "label": "Section bottom margin", 
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "t_padding",
        "label": "Top Padding",
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "b_padding",
        "label": "Bottom Padding",
        "default": 0,
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "text", 
        "id": "title",
        "label": "Title" 
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "select",
        "id": "text_align",
        "options": [
          { "value": "left", "label": "Left"},
          { "value": "center", "label": "Center"},  
          { "value": "right", "label": "Right"}
        ],
        "label": "Text alignment"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "checkbox",
        "id": "enable_bg_gradient",
        "label": "Enable Background Gradient",
        "default": true
      },
      {
        "type": "color",
        "id": "background_color_2",
        "label": "Background color 2",
        "default": "#ffffff",
        "info": "Second color in gradient if background gradient (above) is checked."
      },
      {
        "type": "color",
        "id": "font_color",
        "label": "Font color",
        "default": "#000"
      },
      {
        "type": "header",
        "content": "Global Grid Settings"
      },
      {
        "type": "range",
        "id": "column_count",
        "min": 2,
        "max": 6,
        "step": 1,
        "label": "Column Count", 
        "default": 6
      },
      {
        "type": "checkbox",
        "id": "custom_row_height",
        "label": "Enable Custom Row Height",
        "default": false,
        "info": "(Desktop Only) Default row height is the same as a grid column width. Set custom height in slider below."
      },
      {
        "type": "range",
        "id": "row_height",
        "min": 100,
        "max": 500,
        "step": 10,
        "label": "Row Height", 
        "default": 200,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "grid_gap",
        "min": 0,
        "max": 40,
        "step": 1,
        "unit": "px",
        "label": "Gap between grid items",
        "default": 6
      },
      {
        "type": "checkbox",
        "id": "enable_side_gutters",
        "label": "Enable Side Spacing",
        "default": false,
        "info": "(Desktop Only) Creates space on either side of the grid the same width as grid Gap (above)."
      },
      { 
        "type": "range",
        "id": "img_radius",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 0,
        "unit": "px",
        "label": "Apply Rounded Corners"
      },
      {
        "type": "checkbox",
        "id": "item_circle",
        "label": "Make Grid Items Circular", 
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "grid-item",
        "name": "Grid Item",
        "settings": [
          {
            "type": "header",
            "content": "Grid Item Settings"
          },
          {
            "type": "checkbox",
            "id": "hide_tablets",
            "label": "Hide grid item on tablets",
            "default": false
          },
          {
            "type": "checkbox",
            "id": "hide_phones",
            "label": "Hide grid item on phones",
            "default": false
          },
          {
            "type": "url",
            "id": "url",
            "label": "Section URL",
            "info": "Entire grid item will link to url. Will be disabled if a 'Enable Button' is checked (below)."
          },
          {
            "type": "range",
            "id": "column_span",
            "min": 1,
            "max": 6,
            "step": 1,
            "label": "Column Span",
            "default": 1
          },
          {
            "type": "range",
            "id": "row_span",
            "min": 1,
            "max": 6,
            "step": 1,
            "label": "Row Span",
            "default": 1
          },
          {
            "type": "range",
            "id": "padding",
            "min": 0,
            "max": 60,
            "step": 1,
            "unit": "px",
            "label": "Padding",
            "default": 20
          },
          {
            "type": "header",
            "content": "Grid Image Settings"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "image_fill",
            "options": [
              { "value": "cover", "label": "Cover"},
              { "value": "contain", "label": "Contain"}
            ],
            "label": "Image Fill"
          },
          {
            "type": "range",
            "id": "img_h_position",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%",
            "label": "Image Horizontal Position",
            "default": 50
          },
          {
            "type": "range",
            "id": "img_v_position",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%",
            "label": "Image Vertical Position",
            "default": 50
          },
          {
            "type": "header",
            "content": "Full Overlay Settings"
          },
          {
            "type": "color",
            "id": "overlay_color",
            "label": "Full Overlay color"
          },
          {
            "type": "range",
            "id": "overlay_opacity",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%",
            "label": "Full Overlay Opacity",
            "default": 30
          },
          {
            "type": "range",
            "id": "overlay_hover_opacity",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%",
            "label": "Full Overlay Hover Opacity",
            "default": 30
          },
          {
            "type": "header",
            "content": "Text Settings"
          },
          {
            "type": "color",
            "id": "font_color",
            "label": "Font color",
            "default": "#000"
          },
          {
            "type": "select",
            "id": "text_align",
            "options": [
              { "value": "left", "label": "Left"},
              { "value": "center", "label": "Center"},
              { "value": "right", "label": "Right"}
            ],
            "label": "Text alignment"
          },
          {
            "type": "range",
            "id": "textbox_width",
            "min": 50,
            "max": 100,
            "step": 1,
            "unit": "%",
            "label": "Percentage of grid item width (Desktop Only)",
            "default": 100
          },
          {
            "type": "select",
            "id": "text_h_place",
            "options": [
              { "value": "start", "label": "Left"},
              { "value": "center", "label": "Center"},
              { "value": "flex-end", "label": "Right"}
            ],
            "label": "Text Horizontal Placement" 
          },
          {
            "type": "select",
            "id": "text_v_place",
            "options": [
              { "value": "start", "label": "Top"},
              { "value": "center", "label": "Center"},
              { "value": "flex-end", "label": "Bottom"}
            ],
            "label": "Text Vertical Placement" 
          },
          {
            "type": "text",
            "id": "title",
            "label": "Top Title"
          },
          {
            "type": "range",
            "id": "title_font_size",
            "min": 12,
            "max": 90,
            "step": 1,
            "unit": "px",
            "label": "Top Title Font size",
            "default": 18
          },
          {
            "type": "range",
            "id": "mobile_title_font_size",
            "min": 12,
            "max": 90,
            "step": 1,
            "unit": "px",
            "label": "Mobile Top Title Font size",
            "default": 18
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Bottom Title"
          },
          {
            "type": "range",
            "id": "subtitle_font_size",
            "min": 12,
            "max": 90,
            "step": 1,
            "unit": "px",
            "label": "Bottom Title Font size",
            "default": 18
          },
          {
            "type": "range",
            "id": "mobile_subtitle_font_size",
            "min": 12,
            "max": 90,
            "step": 1,
            "unit": "px",
            "label": "Mobile Bottom Title Font size",
            "default": 18
          },
          {
            "type": "richtext", 
            "id": "text",
            "label": "Text"
          },
          {
            "type": "range",
            "id": "font_size",
            "min": 10,
            "max": 40,
            "step": 1,
            "unit": "px",
            "label": "Font size",
            "default": 16
          },
          {
            "type": "range",
            "id": "mobile_font_size",
            "min": 10,
            "max": 40,
            "step": 1,
            "unit": "px",
            "label": "Mobile Font size",
            "default": 16
          },
          {
            "type": "header",
            "content": "Button Settings"
          },
          {
            "type": "checkbox",
            "id": "enable_btn",
            "label": "Enable button",
            "default": false,
            "info": "Will disable 'Section URL' if added above."
          },
          {
            "type": "text", 
            "id": "btn_text",
            "label": "Button Text",
            "default": "Button"
          },
          {
            "type": "url", 
            "id": "btn_url",
            "label": "Button url"
          },
          {
            "type": "color",
            "id": "button_color",
            "label": "Button color",
            "info": "Overrides default theme settings."
          },
          {
            "type": "color",
            "id": "button_text_color",
            "label": "Button Text color",
            "info": "Overrides default theme settings."
          },
          {
            "type": "select",
            "id": "button_style",
            "options": [
              { "value": "solid", "label": "Solid"},
              { "value": "outline", "label": "outline"}
            ],
            "label": "Button Style" 
          },
          {
            "type": "header",
            "content": "Bottom Overlay Settings",
            "info": "Optional"
          },
          {
            "type": "checkbox",
            "id": "enable_text_overlay",
            "label": "Enable Bottom Text Overlay",
            "default": false
          },
          {
            "type": "color",
            "id": "bottom_overlay_font_color",
            "label": "Bottom Item Overlay Font Color"
          },
          {
            "type": "text",
            "id": "bottom_overlay_title",
            "label": "Bottom Overlay Title"
          },
          {
            "type": "range",
            "id": "bottom_title_size",
            "min": 10,
            "max": 98,
            "step": 1,
            "unit": "px",
            "label": "Bottom Overlay Title Size",
            "default": 18
          },
          {
            "type": "richtext", 
            "id": "bottom_overlay_text",
            "label": "Bottom Overlay Text" 
          },
          {
            "type": "range",
            "id": "bottom_text_size",
            "min": 10,
            "max": 48,
            "step": 1,
            "unit": "px",
            "label": "Bottom Overlay Text Size",
            "default": 16
          },
          {
            "type": "color",
            "id": "bottom_overlay_color",
            "label": "Bottom Item Overlay color"
          },
          {
            "type": "range",
            "id": "bottom_overlay_opacity",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%",
            "label": "Bottom Overlay Opacity",
            "default": 30
          },
          {
            "type": "range",
            "id": "bottom_hover_opacity",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%",
            "label": "Bottom Overlay Hover Opacity",
            "default": 30
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "GDC: Grid Image & Text",
        "category": "GDC Custom Components"
      }
    ]
  }
{% endschema %}
