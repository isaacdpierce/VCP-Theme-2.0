{% if type == section %}
  filter: opacity({{ section.settings.opacity }}%) 
          blur({{ section.settings.blur }}px) 
          brightness({{ section.settings.brightness }}%) 
          contrast({{ section.settings.contrast }}%) 
          grayscale({{ section.settings.grey_scale }}%) 
          hue-rotate({{ section.settings.hue_rotate }}deg) 
          saturate({{ section.settings.saturate }}%) 
          sepia({{ section.settings.sepia }}%); 
{% endif %}

{% if type == block %}
  filter: opacity({{ block.settings.opacity }}%) 
          blur({{ block.settings.blur }}px) 
          brightness({{ block.settings.brightness }}%) 
          contrast({{ block.settings.contrast }}%) 
          grayscale({{ block.settings.grey_scale }}%) 
          hue-rotate({{ block.settings.hue_rotate }}deg) 
          saturate({{ block.settings.saturate }}%) 
          sepia({{ block.settings.sepia }}%);
{% endif %}


