
{% if style == "rise" %}

  .button-animation {
    box-shadow: 0  17px 10px -10px rgba(0, 0, 0, 0.4);
  }
  
  .button-animation:hover {
    box-shadow: 0  37px 20px -20px rgba(0, 0, 0, 0.2);
    transform: translate(0, -10px)
  }

  {% elsif style == "expanse" %} 
  
  .button-animation:hover {
    font-weight: 700 !important;
    letter-spacing: 3px;
    background: none !important;
    -webkit-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
    -moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57); 
    transition: all 0.3s ease 0s;  
  }

  {% elsif style == "pointer" %} 
  
  .button-animation span {
    display: inline-block;
    position: relative;
    transition: 0.4s;
  }

  .button-animation span:after {  
    content: '\00bb';
    position: absolute;
    opacity: 0;
    top: 0;
    right: -20px;
    transition: 0.5s;
  }

  .button-animation:hover span {
    padding-right: 25px;
  }
  .button-animation:hover span:after {
    opacity: 1;
    right: 0;
  }

  {% elsif style == "glow" %}

  .button-animation:hover {
    text-shadow: 0px 0px 6px rgba(255, 255, 255, 1);
    color: white !important;
    -webkit-box-shadow: 0px 5px 40px -10px rgba(255, 255, 255, 1);
    -moz-box-shadow: 0px 5px 40px -10px rgba(255, 255, 255, 1);
    transition: all 0.4s ease 0s;
  }

  {% elsif style == "lift" %}

  .button-animation:hover {
  	background: {{ block.settings.button_color }}30;
    letter-spacing: 1px;
    -webkit-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
    -moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
    box-shadow: 5px 40px -10px rgba(0,0,0,0.57);
    transition: all 0.4s ease 0s;
  }
  
  {% endif %}


