<section class="gdc-slide 
                gdc-slide-image__wrapper 
                block--{{ block.id }}
                {% if block_index == 1 %}gdc-slide-active{% endif %}" 
                data-slide="{{ block_index }}">
  {% render 'gdc-image' image: block.settings.image %}
  
  {% render 'gdc-slide-text-box' block: block %}

</section>

<style>

.gdc-slide-image__wrapper {
  position: relative;
  overflow: hidden;
  width: 100vw;
  height: {{ ss.slide_height }}px;
  background-color: {{ block.settings.bg_color }};
}

.gdc-slide-image__wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: {{ block.settings.opacity }};
}


@media (min-aspect-ratio: 16/9) {
  .gdc-slide-image__wrapper iframe {
    /* height = 100 * (9 / 16) = 56.25 */
    height: 56.25vw;
  }
}
@media (max-aspect-ratio: 16/9) {
  .gdc-slide-image__wrapper iframe {
    /* width = 100 / (9 / 16) = 177.777777 */
    width: 177.78vh;
  }
}



</style>